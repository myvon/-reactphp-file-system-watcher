{
    "name": "myvon/reactphp-file-system-watcher",
    "description": "File System Watcher made with ReactPHP EventLoop and ChildProcess",
    "type": "library",
    "require": {
        "react/child-process": "^0.6.5"
    },
    "keywords": [
        "myvon",
        "file-system-watcher",
        "reactphp-file-system-watcher",
        "reactphp"
    ],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Myvon\\Watcher\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Morgan YVON",
            "email": "morgan@elysaa.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "pestphp/pest": "^1.22",
        "spatie/temporary-directory": "^2.1"
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
